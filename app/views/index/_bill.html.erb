<li class="blue no_sides no_top">
  <a class="bill" href="<%= url_for :controller => 'bill', :action => 'show', :id => bill.ident %>" title="<%= bill.any_title(:bare) %>">
  	<span class="title">
  	  <%= bill.typenumber %> - <span><%= truncate(bill.any_title(:bare), :length => 50) rescue nil %></span>
  	</span>
  	<span class="date">
      <span><%= bill.status %></span> 
    	<%= bill.last_action.formatted_date if bill.last_action %>
  	</span>
  	
  	<% unless count_type == :none %>
  	  <span class="small_article"><%= homepage_object_count(bill, count_type) %></span>
    <% end %>
  </a>
</li>   
