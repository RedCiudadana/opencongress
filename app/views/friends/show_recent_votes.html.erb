<% if @votes.length == 0 %>
  <p>No Recent Votes</p>
<% end %>
<% @votes.each do |v| %>
<% bill = v.bill %>
          <%= v.support == 0 ? "Supporting: " : "Opposing: " %>
          <%= link_to bill.typenumber, bill_path(bill) %>
          <%= bill.any_title(:bare) %></span>
        <br/>
<% end %>

